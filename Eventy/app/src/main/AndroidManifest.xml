<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gabyquiles.eventy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".EventyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gabyquiles.eventy.events.EventsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.EventDetailsActivity"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".events.EventsActivity"
            android:theme="@style/AppTheme.Details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".events.EventsActivity" />
        </activity>

        <activity
            android:name=".addeditevent.AddEditEventActivity"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".events.EventsActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.Details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".events.EventsActivity" />
        </activity>

