<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gabyquiles.eventy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".EventyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".events.EventsActivity"
            android:theme="@style/AppTheme.Main">
        </activity>
        <activity
            android:name=".ui.EventDetailsActivity"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".events.EventsActivity"
            android:theme="@style/AppTheme.Details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".events.EventsActivity" />
        </activity>

        <activity
            android:name=".addeditevent.AddEditEventActivity"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".events.EventsActivity"
            android:theme="@style/AppTheme.Details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".events.EventsActivity" />
        </activity>

        <receiver android:name="com.gabyquiles.eventy.widget.NextEventWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widget_next_event" />
        </receiver>
        <service android:name="com.gabyquiles.eventy.widget.NextEventWidgetIntentService" />

    </application>

</manifest>