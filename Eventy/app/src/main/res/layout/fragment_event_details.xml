<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2">

        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            android:hint="@string/title_placeholder"/>
        <EditText
            android:id="@+id/event_date"
            android:inputType="date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />

        <EditText
            android:id="@+id/event_time"
            android:inputType="time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />
        <EditText
            android:id="@+id/event_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/place_placeholder"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />

        <fragment
            android:layout_width="0dp"
            android:layout_height="@dimen/map_size"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            android:id="@+id/map"
            android:adjustViewBounds="true"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        <Button
            android:id="@+id/add_guests_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            android:text="Guests"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/guest_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            app:layout_gravity="fill_vertical"
            app:layout_columnSpan="2"/>
        <EditText
            android:id="@+id/new_thing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New thing"
            app:layout_columnSpan="2"/>
        <Button
            android:id="@+id/add_things_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            android:text="Things"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/things_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            app:layout_gravity="fill_vertical"
            app:layout_columnSpan="2"/>
    </android.support.v7.widget.GridLayout>
</ScrollView>