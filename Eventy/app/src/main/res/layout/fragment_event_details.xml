<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_placeholder"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/event_date"
                android:inputType="date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/event_time"
                android:inputType="time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/event_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/place_placeholder"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/search_address_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/ic_add_location_black_24dp"
                android:layout_gravity="center"
                android:contentDescription="@string/add_map"
                />
        </LinearLayout>
        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_size"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:visibility="gone"/>
        <Button
            android:id="@+id/add_guests_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guests"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/guest_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"/>
        <EditText
            android:id="@+id/new_thing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New thing"/>
        <Button
            android:id="@+id/add_things_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Things"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/things_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"/>
    </LinearLayout>
</ScrollView>